    
@using UniversityAutentication.ViewModels
@model StudentAddEnrollmentViewModels

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h2>Add Enrollment</h2>
            <form asp-action="EnrollCourse" asp-controller="Student">
                <input type="hidden" asp-for="Student.StudentId" />
                <input type="hidden" asp-for="Student.StudentUser" />
                <div class="form-group">
                    <label asp-for="Student.StudentName"></label>
                    <input asp-for="Student.StudentName" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Course.CourseTitle"></label>
                    <select asp-for="Course.CourseId" asp-items="@Model.CourseList" class="form-control" id="cmbCursos">
                        <option></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Course.SeatCapacity"></label>
                    <input asp-for="Course.SeatCapacity" readonly="readonly" class="form-control" id="txtCapacity" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-outline-info">Save and back to Student home</button>
                </div>
            </form>
        </div>
    </div>
</div>