    
@using UniversityAutentication.ViewModels
@model StudentAddEnrollmentViewModels

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h2>Add Enrollment</h2>

            <form asp-controller="Student" asp-action="EnrollCourse">
                <input  asp-for="Student.StudentId" type="hidden"  />
                <input  asp-for="Student.StudentUser" type="hidden"  />


                <div class="form-group">
                    <label asp-for="Student.StudentName" ></label>
                    <input asp-for="Student.StudentName" readonly="readonly" class="form-control" ></input>
                    
                </div>



                <div class="form-group">
                    <label asp-for="Course.CourseTitle"></label>
                    <select class="form-control" id="cmbCursos" asp-for="Course.CourseId" asp-items="@Model.CourseList">

                        <option></option>

                    </select>
                </div>



                <div class="form-group">
                    <label asp-for="Course.SeatCapacity"></label>
                    <input asp-for="Course.SeatCapacity" readonly="readonly" class="form-control" id="txtCapacity"></input>

                </div>


                <div class="text-center">
                    <button typeof="submit">Save and back to Student home</button>

                </div>



            </form>


        </div>

    </div>


</div>