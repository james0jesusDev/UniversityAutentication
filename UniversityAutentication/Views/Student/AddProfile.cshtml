@using UniversityAutentication.Models

@model Student

<div class="container">
    <div class="row">


        <div class="col-md-7 offset-3">


            <h2>Student Profile</h2>

            <form asp-action="AddProfile">

                <div class="form-group">
                    <label asp-for="StudentUser"></label>
                    <input asp-for="StudentUser" class="form-control" readonly="readonly"></input>
                </div>

                <div class="form-group">
                    <label asp-for="StudentName"></label>
                    <input asp-for="StudentName" class="form-control"></input>
                </div>

           

                <div class="text-center">

                    <button type="submit">Save and back to Student Home</button>
                </div>

            </form>

        </div>
    </div>


</div>