@using UniversityAutentication.Models
@model Instructor

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-3">
            <h2>Instructor Profile</h2>
            <form asp-action="EditProfile">
                <input type="hidden" asp-for="InstructorId" />
                <div class="form-group">
                    <label asp-for="InstructorName"></label>
                    <input asp-for="InstructorName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="OfficeLocation"></label>
                    <input asp-for="OfficeLocation" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InstructorUser"></label>
                    <input asp-for="InstructorUser" class="form-control" />
                </div>
                <br />
                <div class="text-center">
                    <button type="submit">Save and Back to instructor               home</button>
                </div>
            </form>
        </div>
    </div>
</div>