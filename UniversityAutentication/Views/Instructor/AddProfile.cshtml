
@using UniversityAutentication.Models

@model Instructor

<div class="container">
    <div class="row">


        <div class="col-md-7 offset-3">


            <h2>Instructor Profile</h2>

            <form asp-action="AddProfile">

                <div class="form-group">
                    <label asp-for="InstructorName"></label>
                    <input asp-for="InstructorName" class="form-control"></input>
                </div>



                <div class="form-group">
                    <label asp-for="OfficeLocation"></label>
                    <input asp-for="OfficeLocation" class="form-control"></input>
                </div>


                <div class="form-group">
                    <label asp-for="InstructorUser"></label>
                    <input asp-for="InstructorUser" class="form-control"></input>
                </div>

                <div class="text-center">

                    <button type="submit">Save and back to Instructor Home</button>
                </div>

            </form>

        </div>
    </div>


</div>